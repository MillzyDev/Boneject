<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <LangVersion>10.0</LangVersion>
    </PropertyGroup>
  
    <PropertyGroup>
        <TargetFramework>net472</TargetFramework>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <ImplicitUsings>disable</ImplicitUsings>
        <GenerateAssemblyInfo>False</GenerateAssemblyInfo>
        <IsPackable>false</IsPackable>
        <Title>Boneject</Title>
        <Authors>Millzy</Authors>
        <Description>A basic Ninject implementation and wrapper for BONELAB.</Description>
        <Copyright>Copyright Â© Millzy 2023</Copyright>
        <AssemblyName>Boneject</AssemblyName>
        <RootNamespace>Boneject</RootNamespace>
        <Version>0.1.0</Version>
        <OutputType>Library</OutputType>
    </PropertyGroup>

    <ItemGroup>
      <None Include="Boneject.csproj.user" />
    </ItemGroup>

    <ItemGroup>
      <ModFiles Include="$(OutputPath)\Boneject.dll;$(OutputPath)\Boneject.pdb" />
      <UserLibs Include="$(OutputPath)\Ninject.dll" />
    </ItemGroup>
    <ItemGroup>
      <ManifestPath Include="$(OutDir)\manifest.json" />
      <ReadmePath Include="$(OutDir)\README.md" />
      <IconPath Include="$(OutDir)\icon.png" />
    </ItemGroup>
  
    <Target Name="AfterBuild" AfterTargets="Build">
      <Message Text="Copying mod files...." Importance="high" />
      <Copy SourceFiles="@(ModFiles)" DestinationFolder="$(BonelabDir)\Mods\" Retries="10" RetryDelayMilliseconds="3000" />

      <Message Text="Copying User Libraries..." Importance="high" />
      <Copy SourceFiles="@(UserLibs)" DestinationFolder="$(BonelabDir)\UserLibs\" Retries="10" RetryDelayMilliseconds="3000" />

      <Message Text="Done!" Importance="high" />
    </Target>
  
  
    <Target Name="AfterBuild" AfterTargets="Build" Condition="'$(Configuration)' == 'Release'">
      <Message Text="Copying Mod Files to ThunderstoreRelease Directory..." Importance="high" />
      <Copy SourceFiles="@(ModFiles)" DestinationFolder="$(OutDir)\ThunderstoreRelease\Mods\" Retries="10" RetryDelayMilliseconds="3000" />
      
      <Message Text="Copying User Libraries to ThunderstoreRelease..." Importance="high" />
      <Copy SourceFiles="@(UserLibs)" DestinationFolder="$(OutDir)\ThunderstoreRelease\UserLibs\" Retries="10" RetryDelayMilliseconds="3000" />

      <Message Text="Copying Manifest to ThunderstoreRelease Directory..." Importance="high" />
      <Copy SourceFiles="@(ManifestPath)" DestinationFolder="$(OutDir)\ThunderstoreRelease\" Retries="10" RetryDelayMilliseconds="3000" />

      <Message Text="Copying README to ThunderstoreRelease Directory..." Importance="high" />
      <Copy SourceFiles="@(ReadmePath)" DestinationFolder="$(OutDir)\ThunderstoreRelease\" Retries="10" RetryDelayMilliseconds="3000" />

      <Message Text="Copying Icon to ThunderstoreRelease Directory..." Importance="high" />
      <Copy SourceFiles="@(IconPath)" DestinationFolder="$(OutDir)\ThunderstoreRelease\" Retries="10" RetryDelayMilliseconds="3000" />

      <Message Text="Zipping ThunderstoreRelease Directory..." Importance="high" />
      <ZipDirectory DestinationFile="$(OutDir)\$(AssemblyName).zip" Overwrite="true" SourceDirectory="$(OutDir)\ThunderstoreRelease\" />
      
      <Message Text="Done!" Importance="high" />
    </Target>

    <ItemGroup>
      <Content Include="..\icon.png">
        <Link>icon.png</Link>
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
      <Content Include="..\manifest.json">
        <Link>manifest.json</Link>
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
      <Content Include="..\README.md">
        <Link>README.md</Link>
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
    </ItemGroup>

